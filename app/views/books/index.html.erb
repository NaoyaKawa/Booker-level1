<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @book.each do |book| %>
        <thead>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show", book_path(book) %></td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "destroy", book_path(book), method: :delete %></td>
        </tr>
        </thead>
<% end %>
</table>

<h2>New book</h2>
<%= form_with model: @boo, local:true do |f| %>
<% if @boo.errors.any? %>
<p><%= @boo.errors.count %> errors prohibited this book from being saved:</p>
<ul>
  <% @boo.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>