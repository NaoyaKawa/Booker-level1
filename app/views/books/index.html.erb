<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @booker.each do |book| %>
        <thead>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book) %></td>
            <td><%= link_to "edit", edit_book_path(book) %></td>
            <td><%= link_to "destroy", book_path(book), method: :delete %></td>
        </tr>
        </thead>
<% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>

<% end %>